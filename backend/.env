# Database Configuration (for pg/Knex)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=1992
DB_NAME=postgres

# For Prisma (alternative connection string)
DATABASE_URL="postgresql://postgres:1992@localhost:5432/postgres?schema=public"

# Authentication
JWT_SECRET=very_SECRET_key@@@@  
JWT_EXPIRES_IN=1h
JWT_COOKIE_EXPIRES=1

# Server Configuration
PORT=5001
NODE_ENV=development

# CORS/Client Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3002,http://127.0.0.1:3000

# Security
COOKIE_SECURE=false  # set to true in production with HTTPS
COOKIE_HTTPONLY=true 
COOKIE_SAME_SITE=lax  # or 'strict' for better security